% \begin{macro}{\maketitle}
% 
% The title should be set quite dense and centered.
%
%    \begin{macrocode}
\renewcommand{\maketitle}{%
  {%
   \begin{center}%
     \Large \@title \\%
     \vspace{0.1ex}%
     \small \@author, \@date%
   \end{center}%
  }%
}
%    \end{macrocode}
% \end{macro}
